@{ ViewBag.Title = "Contáctanos | SIREON"; }

<h4>Contáctanos</h4>
<br />

<body>
    <main role="main" class="container">

        <div class="col-lg-12">
            <div class="grid" style=" box-shadow: 0 0 10px -5px #bcbebf;">
                <p class="grid-header" style="border-left-color:orange">¿Tienes alguna pregunta o comentario en general?</p>
                <div class="grid-body">
                    <div class="item-wrapper">
                        <div class="row mb-3">
                            <div class="col-md-8 mx-auto">
                                <div class="p-3 mb-3 bg-inverse-light rounded">

                                    <div class="form-group row showcase_row_area">
                                        <div class="col-md-3 showcase_text_area">
                                            <label for="IdAspNetUsers2"><strong>Nombre</strong></label>
                                        </div>
                                        <div class="col-md-9 showcase_content_area">
                                            <input type="text" class="form-control" id="IdAspNetUsers2" value="" placeholder="Ej: Juan Sosa" maxlength="9" required>
                                        </div>

                                    </div>
                                    <div class="form-group row showcase_row_area">
                                        <div class="col-md-3 showcase_text_area">
                                            <label for="IdAspNetNombre2"><strong>Tu Correo</strong></label>
                                        </div>
                                        <div class="col-md-9 showcase_content_area">
                                            <input type="text" class="form-control" id="IdAspNetNombre2" value="" placeholder="Ej: juansosa@test.com" disabled required>
                                        </div>
                                    </div>
                                    <div class="form-group row showcase_row_area">
                                        <div class="col-md-3 showcase_text_area">
                                            <label for="inputType12"><strong>Asunto</strong></label>
                                        </div>
                                        <div class="col-md-9 showcase_content_area">
                                            <input type="email" class="form-control" id="Correo" placeholder="Asunto" disabled required>
                                        </div>
                                    </div>

                                    <div class="form-group row showcase_row_area">
                                        <div class="col-md-3 showcase_text_area">
                                            <label for="Motivo"><strong>Mensaje</strong></label>
                                        </div>
                                        <div class="col-md-9 showcase_content_area">
                                            <textarea class="form-control" id="Motivo" cols="12" rows="5" maxlength="100" required></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row showcase_row_area" style="justify-content:space-around">
                                        <input type="button" class="btn btn-success" onclick="BtnClick()" value="Enviar">
                                    </div>
                                    <br />

                                </div>

                            </div>
                            <div class="col-md-8 mx-auto">
                                <div class="p-3 mb-3 bg-light rounded">
                                    <h4 class="font-italic">Información General</h4>
                                    <p class="text-justify">
                                        <strong>Recinto</strong> Santo Domingo<br />
                                        <strong>Teléfono:</strong> (809) 562-6601<br />
                                        <strong>Email:</strong> info@unphu.edu.do<br />
                                        <strong>Ubicación:</strong> Av. John F. Kennedy Km 7 1/2 Apartado Postal 1423, Santo Domingo, República Dominicana.

                                    </p>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </main>
</body>