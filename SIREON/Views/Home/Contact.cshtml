
@{
    ViewBag.Title = "Contáctanos | SIREON";
}

    <h>Contáctanos</h>
<br />

<body>
    <div class="col-lg-12">
        <div class="grid" style=" box-shadow: 0 0 10px -5px #bcbebf;">
            <form class="form-horizontal">
                <fieldset>

                    <!-- Form Name -->
                    <legend>¿Tienes alguna pregunta o comentario en general?</legend>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Tb_Asunto">Asunto</label>
                        <div class="col-md-4">
                            <input id="Tb_Asunto" name="Tb_Asunto" type="text" placeholder="Asunto" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Textarea -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Tb_Comentarios">Comentarios</label>
                        <div class="col-md-4">
                            <textarea class="form-control" id="Tb_Comentarios" name="Tb_Comentarios">Comentarios</textarea>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Tb_Nombre">Nombre</label>
                        <div class="col-md-4">
                            <input id="Tb_Nombre" name="Tb_Nombre" type="text" placeholder="Nombre" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Tb_Correo">Correo</label>
                        <div class="col-md-4">
                            <input id="Tb_Correo" name="Tb_Correo" type="text" placeholder="Tu Correo" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="Btn_Enviar"></label>
                        <div class="col-md-4">
                            <button id="Btn_Enviar" name="Btn_Enviar" class="btn btn-success">Enviar</button>
                        </div>
                    </div>

                </fieldset>
            </form>

        </div>
    </div>
</body>

